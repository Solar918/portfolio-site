<article class="card project" tabindex="0" data-title="{{ project.data.title | lower }}" data-desc="{{ (project.data.description or '') | lower }}" data-tech="{{ (project.data.tech or []).join(' ').toLowerCase() }}">
  <div class="card-media">
    {% if project.data.image %}
      <img loading="lazy" src="{{ project.data.image }}" alt="{{ project.data.title }} screenshot" />
    {% else %}
      <div class="placeholder" aria-hidden="true"></div>
    {% endif %}
  </div>
  <div class="card-body">
    <h3 class="card-title">{{ project.data.title }}</h3>
    <p class="card-desc">{{ project.data.description }}</p>
    {% if project.data.tech %}
      <ul class="tech-list">
        {% for t in project.data.tech %}<li>{{ t }}</li>{% endfor %}
      </ul>
    {% endif %}
    <div class="card-actions">
      {% if project.data.url %}<a class="btn" href="{{ project.data.url }}" target="_blank" rel="noopener">Live</a>{% endif %}
      {% if project.data.repo %}<a class="btn btn-ghost" href="{{ project.data.repo }}" target="_blank" rel="noopener">Code</a>{% endif %}
      <button class="btn btn-ghost more" data-modal-open data-slug="{{ project.fileSlug }}" aria-haspopup="dialog">Details</button>
    </div>
  </div>
</article>

